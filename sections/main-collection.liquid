</div>

<script>
  // Display current vehicle from localStorage and handle clear button
  document.addEventListener('DOMContentLoaded', function() {
    const VEHICLE_KEY = 'skm_garage_vehicle';
    const vehicleData = localStorage.getItem(VEHICLE_KEY);
    const display = document.getElementById('current-vehicle-display');
    const clearBtn = document.getElementById('btn-clear-vehicle-collection');
    
    if (vehicleData) {
      try {
        const v = JSON.parse(vehicleData);
        if (display && v.year && v.make && v.model) {
          display.textContent = `${v.year} ${v.make} ${v.model}${v.submodel ? ' ' + v.submodel : ''}`;
          display.classList.add('collection-hud-vehicle--active');
          
          // Show the clear button
          if (clearBtn) {
            clearBtn.classList.remove('hidden');
          }
        }
      } catch(e) {}
    }
    
    // Clear vehicle button handler
    if (clearBtn) {
      clearBtn.addEventListener('click', function() {
        localStorage.removeItem(VEHICLE_KEY);
        window.location.href = '/collections/all';
      });
    }
  });
</script>


