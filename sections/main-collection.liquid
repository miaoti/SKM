<results-list
  class="section product-grid-container color-{{ section.settings.color_scheme }}"
  style="--padding-block-start: {{ section.settings.padding-block-start }}px; --padding-block-end: {{ section.settings.padding-block-end }}px;"
  section-id="{{ section.id }}"
  infinite-scroll="{{ section.settings.enable_infinite_scroll }}"
>
  {% render 'skip-to-content-link', href: '#ResultsList', text: 'accessibility.skip_to_results_list' %}

  <div
    class="collection-wrapper grid gap-style{% if section.settings.product_grid_width == 'full-width' %} collection-wrapper--grid-full-width{% endif %}"
  >

    {% content_for 'block',
      type: 'filters',
      id: 'filters',
      results: collection,
      results_size: collection.products_count
    %}

    {% assign products_per_page = 24 %}

    {% if section.settings.enable_infinite_scroll == false %}
      {% assign products_per_page = section.settings.products_per_page %}
    {% endif %}

    {% paginate collection.products by products_per_page %}
      {%- comment -%} Check if YMM filter is active {%- endcomment -%}
      {%- assign ymm_active = false -%}
      {%- for filter in collection.filters -%}
        {%- if filter.param_name == 'filter.p.m.custom.fits_vehicles' and filter.active_values.size > 0 -%}
          {%- assign ymm_active = true -%}
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}

      <div id="ymm-filter-status" data-active="{{ ymm_active }}" data-count="{{ collection.products_count }}"></div>
      
      <!-- No Results Message - HUD Style -->
      <div id="ymm-no-results" class="hidden" style="grid-column: 1 / -1;">
        <div class="hud-no-results">
          <div class="hud-no-results-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <circle cx="11" cy="11" r="8"/>
              <path d="M21 21l-4.35-4.35"/>
              <path d="M8 8l6 6"/>
              <path d="M14 8l-6 6"/>
            </svg>
          </div>
          <h2 class="hud-no-results-title">NO MATCHING COMPONENTS</h2>
          <p class="hud-no-results-text">The current vehicle configuration returned zero compatible systems.</p>
          <button onclick="document.getElementById('ymm-reset-modal').showModal()" class="hud-no-results-button">
            RECONFIGURE VEHICLE
          </button>
        </div>
      </div>

      <!-- Admin Configuration Warning - HUD Style -->
      <div id="ymm-admin-warning" class="hidden" style="grid-column: 1 / -1;">
        <div class="hud-admin-warning">
          <div class="hud-warning-header">
            <span class="hud-warning-indicator"></span>
            <span>SYSTEM CONFIGURATION REQUIRED</span>
          </div>
          <p class="hud-warning-text">Vehicle filter detected in URL but was not processed by the server.</p>
          <div class="hud-warning-steps">
            <p style="margin-bottom: 0.5rem; font-weight: bold; color: #CC0000;">ACTION REQUIRED:</p>
            <ol>
              <li>Navigate to Shopify Admin → <strong>Search & Discovery</strong> App → <strong>Filters</strong></li>
              <li>Click <strong>Add filter</strong></li>
              <li>Select <strong>Product metafields</strong></li>
              <li>Choose <strong>Fits Vehicles</strong> (custom.fits_vehicles)</li>
              <li>Save configuration</li>
            </ol>
          </div>
        </div>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const urlParams = new URLSearchParams(window.location.search);
          const hasYmmParam = urlParams.has('filter.p.m.custom.fits_vehicles');
          const isActive = document.getElementById('ymm-filter-status').dataset.active === 'true';
          const productCount = parseInt(document.getElementById('ymm-filter-status').dataset.count || '0');
          
          // Product Type Filtering
          const typeParam = urlParams.get('type');
          if (typeParam) {
            const products = document.querySelectorAll('[data-product-type]');
            let visibleCount = 0;
            products.forEach(product => {
              const productType = product.dataset.productType;
              if (productType !== typeParam) {
                product.style.display = 'none';
              } else {
                visibleCount++;
              }
            });
            
            // Update product count display if exists
            const countEl = document.querySelector('.collection-product-count');
            if (countEl) {
              countEl.textContent = `${visibleCount} ${visibleCount === 1 ? 'item' : 'items'}`;
            }
            
            // Show no results if all products hidden
            if (visibleCount === 0) {
              const noResults = document.getElementById('ymm-no-results');
              if (noResults) {
                noResults.querySelector('h2').textContent = `No ${typeParam} products found.`;
                noResults.querySelector('p').textContent = `We don't have any ${typeParam} parts in this collection.`;
                noResults.classList.remove('hidden');
              }
            }
          }
          
          if (hasYmmParam) {
            if (productCount === 0) {
              // Valid search, but no results found
              const results = document.querySelector('.collection-wrapper');
              if(results) {
                 // Target only the real product grid, excluding our custom messages
                 const grid = results.querySelector('.main-collection-grid') || results;
                 grid.style.display = 'none';
              }
              document.getElementById('ymm-no-results').classList.remove('hidden');
            } else if (!isActive) {
              // Results found but filter NOT active = Configuration Error
              const results = document.querySelector('.collection-wrapper');
              if(results) {
                 const grid = results.querySelector('.main-collection-grid') || results;
                 grid.style.display = 'none';
              }
              document.getElementById('ymm-admin-warning').classList.remove('hidden');
            }
          }
        });
      </script>

      {% capture children %}
        {% for product in collection.products %}
          <li
            id="{{ section.id }}-{{ product.id }}"
            class="product-grid__item product-grid__item--{{ forloop.index0 }}"
            data-page="{{ paginate.current_page }}"
            data-product-id="{{ product.id }}"
            data-product-type="{{ product.type | escape }}"
            ref="cards[]"
          >
            {% # theme-check-disable %}
            {% content_for 'block', type: '_product-card', id: 'product-card', closest.product: product %}
            {% # theme-check-enable %}
          </li>
        {% endfor %}

        {% comment %}
        {%- if ymm_active and paginate.current_page == 1 -%}
          {%- assign universal_products = collections['universal'].products -%}
          {%- if universal_products.size > 0 -%}
             <li class="col-span-full py-8 text-center text-xl font-bold uppercase tracking-wider text-[#CC0000] border-t border-b border-gray-100 my-8">
                Universal Parts
             </li>
             {%- for product in universal_products limit: 4 -%}
              <li
                class="product-grid__item"
                data-product-id="{{ product.id }}"
              >
                {% content_for 'block', type: '_product-card', id: 'universal-card', closest.product: product %}
              </li>
             {%- endfor -%}
          {%- endif -%}
        {%- endif -%}
        {% endcomment %}
      {% endcapture %}

      {% render 'product-grid',
        section: section,
        children: children,
        products: collection.products,
        paginate: paginate,
        enable_infinite_scroll: section.settings.enable_infinite_scroll
      %}
    {% endpaginate %}
  </div>
</results-list>

