<div class="max-w-md mx-auto px-6 py-12">
  <h1 class="text-2xl font-bold uppercase tracking-wider text-[#111111] mb-6">Reset password</h1>
  {% if form.errors %}
    <p class="text-[#CC0000] mb-4">{{ form.errors | default_errors }}</p>
  {% endif %}
  {% form 'reset_customer_password' %}
    <div class="space-y-4">
      <label for="ResetPassword" class="block text-sm font-medium text-gray-700">New password</label>
      <input id="ResetPassword" type="password" name="customer[password]" class="w-full border border-gray-300 px-3 py-2" autocomplete="new-password" required>
      <label for="ResetPasswordConfirm" class="block text-sm font-medium text-gray-700">Confirm password</label>
      <input id="ResetPasswordConfirm" type="password" name="customer[password_confirmation]" class="w-full border border-gray-300 px-3 py-2" autocomplete="new-password" required>
      <button type="submit" class="w-full h-12 bg-[#111111] text-white font-bold uppercase tracking-wider">Set password</button>
    </div>
  {% endform %}
</div>

