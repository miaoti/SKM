{% comment %}
  "The Proving Ground" - High-Tech Contact Page
  - Dark Mode / Carbon Fiber Aesthetic
  - Glassmorphism & Tactical UI Elements
  - Satellite/Telemetry Map Style
{% endcomment %}

<!-- Google Fonts for "Tech" feel -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Oswald:wght@400;500;700&display=swap" rel="stylesheet">

<style>
  :root {
    --racing-red: #CC0000;
    --carbon-black: #111111;
    --terminal-green: #00ff41;
  }

  /* Typography Overrides */
  .font-tech-header { font-family: 'Oswald', sans-serif; }
  .font-tech-mono { font-family: 'JetBrains Mono', monospace; }

  /* Backgrounds */
  .bg-carbon-fiber {
    background-color: #050505;
    background-image: 
      linear-gradient(45deg, #111 25%, transparent 25%, transparent 75%, #111 75%, #111),
      linear-gradient(45deg, #111 25%, transparent 25%, transparent 75%, #111 75%, #111);
    background-size: 4px 4px;
    background-position: 0 0, 2px 2px;
  }

  /* Glassmorphism */
  .glass-panel {
    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Animations */
  @keyframes drawLine {
    from { width: 0; }
    to { width: 100%; }
  }
  .animate-draw-line {
    animation: drawLine 2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes radarPing {
    0% { transform: scale(1); opacity: 0.8; }
    100% { transform: scale(3); opacity: 0; }
  }
  .radar-ping {
    animation: radarPing 3s infinite ease-out;
  }

  @keyframes scanText {
    0% { content: "Scanning..."; }
    25% { content: "Analyzing..."; }
    50% { content: "Verifying..."; }
    75% { content: "Confirmed."; }
    100% { content: "Ready."; }
  }

  /* Form Styling */
  .input-tech {
    background: transparent;
    border: none;
    border-bottom: 1px solid rgba(255,255,255,0.2);
    color: white;
    font-family: 'JetBrains Mono', monospace;
    transition: all 0.3s ease;
  }
  .input-tech:focus {
    outline: none;
    border-bottom-color: var(--racing-red);
    box-shadow: 0 4px 12px -5px rgba(204, 0, 0, 0.3);
  }

  /* Map Filter for "Midnight/Neon" look */
  .map-filter {
    filter: invert(1) grayscale(1) contrast(1.2) brightness(0.8);
  }

  /* Card Hover Effects */
  .tech-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .tech-card:hover {
    transform: translateY(-5px);
    background-color: #0a0a0a;
  }
  .tech-card:hover .laser-line {
    width: 100%;
    opacity: 1;
  }
</style>

<div class="w-full bg-black min-h-screen text-white overflow-x-hidden font-tech-mono selection:bg-[#CC0000] selection:text-white" style="width: 100vw; margin-left: calc(50% - 50vw);">

  <!-- =========================================
       1. HERO SECTION: "The Proving Ground"
  ========================================== -->
  <div class="relative w-full h-[60vh] flex items-center justify-center overflow-hidden bg-carbon-fiber">
    <!-- Dark Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-black z-10 pointer-events-none"></div>

    <div class="relative z-20 text-center px-4">
      <h1 class="font-tech-header text-5xl md:text-7xl lg:text-8xl font-bold uppercase tracking-tight text-white mb-2 leading-none">
        Systems Support<br>& Engineering
      </h1>
      
      <p class="text-[#CC0000] text-xs md:text-sm tracking-[0.3em] font-bold mt-4 mb-8">
        [ MISSION: PRECISION FITMENT & GLOBAL LOGISTICS ]
      </p>

      <!-- The Racing Red Line -->
      <div class="h-[2px] bg-[#CC0000] mx-auto animate-draw-line" style="max-width: 200px;"></div>
    </div>
  </div>

  <!-- =========================================
       2. SPLIT LAYOUT: "Tactical Intel & Input"
  ========================================== -->
  <div class="w-full max-w-[1600px] mx-auto px-6 lg:px-12 py-24 relative">
    
    <!-- Background "DNA" Watermark (SVG Manifold) -->
    <div class="absolute top-0 left-0 w-full h-full opacity-[0.03] pointer-events-none z-0 flex items-center justify-center overflow-hidden">
        <svg width="800" height="800" viewBox="0 0 100 100" fill="none" stroke="currentColor" stroke-width="0.5" class="text-white transform -rotate-12 scale-150">
           <path d="M20 30 Q 40 10 60 30 T 90 30" />
           <path d="M20 40 Q 40 20 60 40 T 90 40" />
           <path d="M20 30 L 20 40 M 90 30 L 90 40" />
           <!-- Simple schematic lines -->
           <circle cx="20" cy="35" r="3" />
           <circle cx="90" cy="35" r="4" />
        </svg>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 relative z-10">
      
      <!-- LEFT COLUMN: Technical Intel -->
      <div class="flex flex-col justify-center space-y-16">
        
        <!-- Address -->
        <div class="group relative pl-6">
            <div class="absolute left-0 top-1 bottom-1 w-[1px] bg-gray-800 group-hover:bg-[#CC0000] transition-colors"></div>
            <div class="font-bold text-[10px] text-[#CC0000] tracking-widest mb-2">HQ COORDINATES</div>
            <div class="flex items-start gap-4">
               <!-- Blueprint Pin Icon -->
               <svg class="w-6 h-6 text-gray-400 stroke-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="square" stroke-linejoin="miter" d="M12 21s-8-5.6-8-12a8 8 0 1 1 16 0c0 6.4-8 12-8 12z" />
                  <circle cx="12" cy="9" r="2" />
               </svg>
               <div class="text-gray-300 text-sm leading-relaxed">
                  13717 Floyd Cir<br>
                  Dallas, TX 75243<br>
                  Sector 7 (United States)
               </div>
            </div>
        </div>

        <!-- Email -->
        <div class="group relative pl-6">
            <div class="absolute left-0 top-1 bottom-1 w-[1px] bg-gray-800 group-hover:bg-[#CC0000] transition-colors"></div>
            <div class="font-bold text-[10px] text-[#CC0000] tracking-widest mb-2">COMMUNICATIONS ARRAY</div>
            <a href="mailto:support@skm-ex.com" class="text-xl md:text-2xl text-white hover:text-[#CC0000] transition-colors inline-block relative after:content-[''] after:absolute after:w-full after:scale-x-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-[#CC0000] after:origin-bottom-right after:transition-transform after:duration-300 hover:after:scale-x-100 hover:after:origin-bottom-left">
              support@skm-ex.com
            </a>
        </div>

        <!-- Hours -->
        <div class="group relative pl-6">
            <div class="absolute left-0 top-1 bottom-1 w-[1px] bg-gray-800 group-hover:bg-[#CC0000] transition-colors"></div>
            <div class="font-bold text-[10px] text-[#CC0000] tracking-widest mb-2">OPERATIONAL WINDOW</div>
            <div class="flex items-center gap-4 text-3xl md:text-4xl font-tech-header font-bold text-gray-200">
                09:00 <span class="text-gray-600">—</span> 18:00
                <span class="text-sm font-tech-mono text-gray-500 ml-2">EST</span>
            </div>
            
            <!-- Live Dot Logic (Simple JS or Liquid check typically, hardcoded visual prompt here for now) -->
            <div class="flex items-center gap-2 mt-2">
                <span class="relative flex h-2 w-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                </span>
                <span class="text-[10px] text-green-500 uppercase tracking-widest">System Active</span>
            </div>
        </div>

      </div>

      <!-- RIGHT COLUMN: The Command Form -->
      <div class="glass-panel p-8 md:p-12 rounded-sm shadow-2xl relative overflow-hidden">
        <!-- Subtle red glow corner -->
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-[#CC0000] opacity-10 blur-[50px] rounded-full"></div>

        <h2 class="font-tech-header text-3xl font-bold uppercase mb-8 flex items-center gap-3">
          <span class="w-2 h-8 bg-[#CC0000]"></span>
          Transmit Inquiry
        </h2>

        {% form 'contact', class: "space-y-8" %}
          
          {% if form.posted_successfully? %}
            <div class="border border-green-500/30 bg-green-500/10 p-6 text-center">
              <h3 class="text-green-500 font-bold uppercase tracking-widest mb-2">Transmission Received</h3>
              <p class="text-gray-400 text-xs">Stand by for engineering response.</p>
            </div>
          {% else %}
            
            <!-- Default Form Errors -->
            {% if form.errors %}
              <div class="border border-red-500/30 bg-red-500/10 p-4 text-red-500 text-xs">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Name -->
              <div class="relative group">
                <input type="text" id="ContactFormName" name="contact[name]" placeholder=" " class="input-tech peer w-full h-10 px-0" required>
                <label for="ContactFormName" class="absolute left-0 top-2 text-gray-500 text-xs uppercase tracking-widest transition-all peer-focus:-top-4 peer-focus:text-[#CC0000] peer-focus:text-[10px] peer-not-placeholder-shown:-top-4 peer-not-placeholder-shown:text-[10px] pointer-events-none">Operative Name</label>
              </div>

              <!-- Email -->
              <div class="relative group">
                <input type="email" id="ContactFormEmail" name="contact[email]" placeholder=" " class="input-tech peer w-full h-10 px-0" required>
                <label for="ContactFormEmail" class="absolute left-0 top-2 text-gray-500 text-xs uppercase tracking-widest transition-all peer-focus:-top-4 peer-focus:text-[#CC0000] peer-focus:text-[10px] peer-not-placeholder-shown:-top-4 peer-not-placeholder-shown:text-[10px] pointer-events-none">Comms ID (Email)</label>
              </div>
            </div>

            <!-- Phone -->
            <div class="relative group">
              <input type="tel" id="ContactFormPhone" name="contact[phone]" placeholder=" " class="input-tech peer w-full h-10 px-0">
              <label for="ContactFormPhone" class="absolute left-0 top-2 text-gray-500 text-xs uppercase tracking-widest transition-all peer-focus:-top-4 peer-focus:text-[#CC0000] peer-focus:text-[10px] peer-not-placeholder-shown:-top-4 peer-not-placeholder-shown:text-[10px] pointer-events-none">Signal Frequency (Phone)</label>
            </div>

            <!-- Smart Vehicle Input -->
            <div class="relative group">
              <input type="text" id="ContactFormVehicle" name="contact[vehicle_details]" placeholder=" " class="input-tech peer w-full h-10 px-0 group-hover:border-b-gray-500">
              <label for="ContactFormVehicle" class="absolute left-0 top-2 text-gray-500 text-xs uppercase tracking-widest transition-all peer-focus:-top-4 peer-focus:text-[#CC0000] peer-focus:text-[10px] peer-not-placeholder-shown:-top-4 peer-not-placeholder-shown:text-[10px] pointer-events-none">Vehicle Config (Year/Make/Model)</label>
              
              <!-- Scanning Animation (CSS only for demo, normally JS triggered) -->
              <div class="absolute right-0 top-2 text-[10px] text-[#CC0000] opacity-0 peer-focus:opacity-100 transition-opacity animate-pulse">
                INITIALIZING SCAN...
              </div>
            </div>

            <!-- Message -->
            <div class="relative group">
              <textarea id="ContactFormMessage" name="contact[body]" rows="3" placeholder=" " class="input-tech peer w-full py-2 px-0 resize-none"></textarea>
              <label for="ContactFormMessage" class="absolute left-0 top-2 text-gray-500 text-xs uppercase tracking-widest transition-all peer-focus:-top-4 peer-focus:text-[#CC0000] peer-focus:text-[10px] peer-not-placeholder-shown:-top-4 peer-not-placeholder-shown:text-[10px] pointer-events-none">Encrypted Data Packet</label>
            </div>

            <!-- Submit Button (Tactical Toggle) -->
            <button type="submit" class="w-full relative group overflow-hidden bg-black border border-gray-800 h-16 flex items-center justify-between px-6 transition-all hover:border-[#CC0000]">
              <div class="absolute inset-0 w-1 h-full bg-[#CC0000] transition-all group-hover:w-2"></div>
              
              <span class="pl-4 font-tech-header font-bold uppercase tracking-widest text-white group-hover:text-[#CC0000] transition-colors z-10">
                Transmit Inquiry
              </span>
              
              <div class="flex items-center gap-2 opacity-50 group-hover:opacity-100 transition-opacity">
                <span class="w-2 h-2 rounded-full bg-[#CC0000] shadow-[0_0_10px_#CC0000]"></span>
                <span class="text-[9px] uppercase tracking-widest">Ready</span>
              </div>
            </button>

          {% endif %}
        {% endform %}
      </div>

    </div>
  </div>

  <!-- =========================================
       3. MAP: "Global Telemetry"
  ========================================== -->
  <div class="w-full h-[500px] relative border-y border-gray-900 overflow-hidden bg-black">
    
    <!-- Using Google Maps Embed with CSS Filter for "Midnight" look -->
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3349.560662287955!2d-96.74548842426867!3d32.90972217696144!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c2067d7698501%3A0x6e8e0c8b6b0c6e0!2s13717%20Floyd%20Cir%2C%20Dallas%2C%20TX%2075243!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus" 
