    <div class="max-w-[1600px] mx-auto px-4 md:px-8">
      
      <div class="flex items-center gap-4 mb-16">
        <div class="w-2 h-2 bg-[#CC0000]"></div>
        <h2 class="font-tech-header text-2xl text-white uppercase tracking-widest">Protocol & Documentation</h2>
        <div class="h-[1px] bg-gray-900 flex-grow ml-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <!-- Card 1: Logistics -->
        <a href="/policies/shipping-policy" class="tech-card group block bg-[#111] h-64 relative overflow-hidden flex flex-col justify-between p-8 border border-white/5 no-underline">
          <div class="absolute top-0 left-0 w-0 h-[2px] bg-[#CC0000] laser-line transition-all duration-300"></div>
          
          <div class="flex justify-between items-start">
            <div class="font-tech-mono text-[9px] text-gray-600">DOC_NO: 75074-S</div>
            <svg class="w-6 h-6 text-gray-700 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
          </div>
          
          <div>
            <h3 class="font-tech-header text-2xl text-white mb-2 uppercase group-hover:text-[#CC0000] transition-colors">Logistics Protocol</h3>
            <p class="text-xs text-gray-500 font-tech-mono">Global Shipping & Tracking manifests.</p>
          </div>
        </a>

        <!-- Card 2: Warranty -->
        <a href="/policies/refund-policy" class="tech-card group block bg-[#111] h-64 relative overflow-hidden flex flex-col justify-between p-8 border border-white/5 no-underline">
          <div class="absolute top-0 left-0 w-0 h-[2px] bg-[#CC0000] laser-line transition-all duration-300"></div>
          
          <div class="flex justify-between items-start">
            <div class="font-tech-mono text-[9px] text-gray-600">DOC_NO: 88421-W</div>
            <svg class="w-6 h-6 text-gray-700 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          
          <div>
            <h3 class="font-tech-header text-2xl text-white mb-2 uppercase group-hover:text-[#CC0000] transition-colors">Warranty Archive</h3>
            <p class="text-xs text-gray-500 font-tech-mono">RMA Procedures & validation.</p>
          </div>
        </a>

        <!-- Card 3: Fitment -->
        <a href="#" class="tech-card group block bg-[#111] h-64 relative overflow-hidden flex flex-col justify-between p-8 border border-white/5 no-underline">
          <div class="absolute top-0 left-0 w-0 h-[2px] bg-[#CC0000] laser-line transition-all duration-300"></div>
          
          <div class="flex justify-between items-start">
            <div class="font-tech-mono text-[9px] text-gray-600">DOC_NO: 11029-F</div>
            <svg class="w-6 h-6 text-gray-700 group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
