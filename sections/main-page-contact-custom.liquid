<div class="w-full bg-white text-[#111111] font-sans overflow-x-hidden">
  
  <!-- 1. Page Header (The "Comm-Link") -->
  <div class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12 text-center">
    <h1 class="text-4xl md:text-5xl font-bold uppercase tracking-tighter text-[#111111] mb-4">
      Engineering & Support
    </h1>
    <p class="text-gray-500 uppercase tracking-widest text-xs md:text-sm max-w-2xl mx-auto">
      Technical questions, fitment checks, or order status. Connect directly with our team.
    </p>
  </div>

  <!-- 2. The Split-Grid Layout -->
  <div class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 mb-24">
    <div class="w-full !grid !grid-cols-1 !md:grid-cols-2 !gap-12 !lg:gap-24">
      
      <!-- Left Column: The "Intel" -->
      <div class="pl-6 border-l-4 border-[#CC0000] h-fit">
        <h2 class="text-2xl font-bold uppercase tracking-wide mb-8">Contact Information</h2>
        
        <div class="space-y-8">
          
          <!-- HQ Address -->
          <div>
            <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400 mb-2">Headquarters</h3>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[#CC0000] flex-shrink-0">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              <p class="font-mono text-sm leading-relaxed">
                13717 Floyd Cir<br>
                Dallas, TX 75243<br>
                United States
              </p>
            </div>
          </div>

          <!-- Email -->
          <div>
            <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400 mb-2">Email Us</h3>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[#CC0000] flex-shrink-0">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
              <a href="mailto:support@skm-ex.com" class="font-mono text-sm hover:text-[#CC0000] transition-colors border-b border-gray-200 hover:border-[#CC0000]">
                support@skm-ex.com
              </a>
            </div>
          </div>

          <!-- Hours -->
          <div>
            <h3 class="text-xs font-bold uppercase tracking-widest text-gray-400 mb-2">Business Hours</h3>
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-[#CC0000] flex-shrink-0">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="font-mono text-sm leading-relaxed">
                <p>Mon - Fri: 0900 - 1800 EST</p>
                <p class="text-gray-400 text-xs mt-1">Closed Weekends</p>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- Right Column: The "Transmission" (Form) -->
      <div class="bg-white p-8 md:p-10 border border-gray-100 shadow-xl rounded-sm">
        <h2 class="text-2xl font-bold uppercase tracking-wide mb-8">Send A Message</h2>
        
        {% form 'contact' %}
          
          {% if form.posted_successfully? %}
            <div class="bg-black text-white p-8 text-center border-l-4 border-[#CC0000]">
              <h3 class="text-xl font-bold uppercase tracking-wider mb-2">Message Sent</h3>
              <p class="text-gray-400 text-sm">We have received your message and will get back to you shortly.</p>
            </div>
          {% else %}

            {% if form.errors %}
              <div class="mb-6 bg-[#CC0000] p-4 text-white text-sm font-medium">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            <div class="space-y-5">
              
              <div class="!grid !grid-cols-1 !md:grid-cols-2 !gap-5">
                <!-- Name -->
                <div class="relative group">
                  <input type="text" id="ContactFormName" name="contact[name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Name" class="peer w-full h-12 bg-white border border-gray-200 text-[#111111] placeholder-transparent focus:outline-none focus:border-[#CC0000] transition-all px-4">
                  <label for="ContactFormName" class="absolute left-4 -top-2.5 bg-white px-1 text-xs text-gray-500 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#CC0000] peer-focus:text-xs font-bold uppercase tracking-wide">Name</label>
                </div>

                <!-- Email -->
                <div class="relative group">
                  <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" placeholder="Email" required class="peer w-full h-12 bg-white border border-gray-200 text-[#111111] placeholder-transparent focus:outline-none focus:border-[#CC0000] transition-all px-4">
                  <label for="ContactFormEmail" class="absolute left-4 -top-2.5 bg-white px-1 text-xs text-gray-500 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#CC0000] peer-focus:text-xs font-bold uppercase tracking-wide">Email</label>
                </div>
              </div>

              <!-- Phone -->
              <div class="relative group">
                <input type="tel" id="ContactFormPhone" name="contact[phone]" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="Phone" class="peer w-full h-12 bg-white border border-gray-200 text-[#111111] placeholder-transparent focus:outline-none focus:border-[#CC0000] transition-all px-4">
                <label for="ContactFormPhone" class="absolute left-4 -top-2.5 bg-white px-1 text-xs text-gray-500 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#CC0000] peer-focus:text-xs font-bold uppercase tracking-wide">Phone</label>
              </div>

              <!-- Vehicle Details -->
              <div class="relative group">
                <input type="text" id="ContactFormVehicle" name="contact[vehicle_details]" placeholder="Vehicle Details" class="peer w-full h-12 bg-white border border-gray-200 text-[#111111] placeholder-transparent focus:outline-none focus:border-[#CC0000] transition-all px-4">
                <label for="ContactFormVehicle" class="absolute left-4 -top-2.5 bg-white px-1 text-xs text-gray-500 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-[#CC0000] peer-focus:text-xs font-bold uppercase tracking-wide">Vehicle (Year/Make/Model)</label>
              </div>

              <!-- Message -->
              <div class="relative group">
                <textarea rows="6" id="ContactFormMessage" name="contact[body]" placeholder="Message" class="peer w-full bg-white border border-gray-200 text-[#111111] placeholder-transparent focus:outline-none focus:border-[#CC0000] transition-all p-4">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                <label for="ContactFormMessage" class="absolute left-4 -top-2.5 bg-white px-1 text-xs text-gray-500 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-4 peer-focus:-top-2.5 peer-focus:text-[#CC0000] peer-focus:text-xs font-bold uppercase tracking-wide">Message</label>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="w-full h-14 bg-black text-white font-bold uppercase tracking-widest hover:bg-[#CC0000] transition-colors duration-300">
                Send Message
              </button>

            </div>
          {% endif %}
        {% endform %}
      </div>

    </div>
  </div>

  <!-- 3. The Map Section -->
  <div class="w-full h-[400px] md:h-[500px] bg-gray-100 relative overflow-hidden grayscale contrast-[1.2] invert-[0.1]">
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3349.560662287955!2d-96.74548842426867!3d32.90972217696144!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c2067d7698501%3A0x6e8e0c8b6b0c6e0!2s13717%20Floyd%20Cir%2C%20Dallas%2C%20TX%2075243!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus" 
      width="100%" 
      height="100%" 
      style="border:0;" 
      allowfullscreen="" 
      loading="lazy" 
      referrerpolicy="no-referrer-when-downgrade">
    </iframe>
    <!-- Custom Pin Overlay (Visual only, map handles interaction) -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none">
       <div class="relative">
         <div class="w-4 h-4 bg-[#CC0000] rounded-full animate-ping absolute top-0 left-0 opacity-75"></div>
         <div class="w-4 h-4 bg-[#CC0000] rounded-full border-2 border-white shadow-lg relative z-10"></div>
       </div>
    </div>
  </div>

  <!-- 4. "Before You Ask" (FAQ Mini-Section) -->
  <div class="w-full bg-[#f5f5f5] border-t border-gray-200">
    <div class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center mb-10">
        <h2 class="text-xl font-bold uppercase tracking-wide">Common Questions</h2>
        <p class="text-xs text-gray-500 uppercase tracking-widest mt-1">Check these links first</p>
      </div>

      <div class="!grid !grid-cols-1 !md:grid-cols-3 !gap-6">
        
        <!-- Card 1 -->
        <a href="/policies/shipping-policy" class="bg-white p-8 border border-gray-200 hover:border-[#CC0000] hover:shadow-lg transition-all group text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-4 text-gray-400 group-hover:text-[#CC0000] transition-colors">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.713m0-6.713l2.25-2.25m0 0l2.25 2.25m-2.25-2.25v6.713a2.25 2.25 0 01-2.25 2.25h-.5" />
          </svg>
          <h3 class="font-bold uppercase text-sm mb-1">Shipping Policy</h3>
          <p class="text-xs text-gray-500">Logistics & Timelines</p>
        </a>

        <!-- Card 2 -->
        <a href="/policies/refund-policy" class="bg-white p-8 border border-gray-200 hover:border-[#CC0000] hover:shadow-lg transition-all group text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-4 text-gray-400 group-hover:text-[#CC0000] transition-colors">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
          </svg>
          <h3 class="font-bold uppercase text-sm mb-1">Returns & Warranty</h3>
          <p class="text-xs text-gray-500">RMA Protocols</p>
        </a>

        <!-- Card 3 -->
        <a href="#" class="bg-white p-8 border border-gray-200 hover:border-[#CC0000] hover:shadow-lg transition-all group text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-4 text-gray-400 group-hover:text-[#CC0000] transition-colors">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h3 class="font-bold uppercase text-sm mb-1">Fitment Guide</h3>
          <p class="text-xs text-gray-500">Compatibility Check</p>
        </a>

      </div>
    </div>
  </div>

</div>

