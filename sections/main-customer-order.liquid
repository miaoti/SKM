<div class="max-w-4xl mx-auto px-6 py-12">
  <h1 class="text-2xl font-bold uppercase tracking-wider text-[#111111] mb-2">Order {{ order.name }}</h1>
  <p class="text-sm text-gray-600 mb-6">{{ order.created_at | date: "%b %d, %Y" }}</p>
  <div class="border border-gray-200 rounded mb-8">
    <div class="px-4 py-4 border-b border-gray-100 grid grid-cols-2 gap-4">
      <div>
        <p class="text-sm text-gray-600">Status</p>
        <p class="font-medium text-[#111111] capitalize">{{ order.fulfillment_status }}</p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Total</p>
        <p class="font-medium text-[#111111]">{{ order.total_price | money }}</p>
      </div>
    </div>
    <div class="px-4 py-4">
      <h2 class="text-lg font-bold text-[#111111] mb-4">Items</h2>
      <div class="space-y-4">
        {% for line_item in order.line_items %}
          <div class="flex items-center justify-between">
            <div>
              <p class="font-medium text-[#111111]">{{ line_item.title }}</p>
              <p class="text-sm text-gray-600">Qty {{ line_item.quantity }}</p>
            </div>
            <p class="font-medium text-[#111111]">{{ line_item.final_line_price | money }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <a href="/account" class="inline-flex items-center justify-center h-10 px-4 bg-[#111111] text-white text-sm font-bold uppercase tracking-wide">Back to account</a>
</div>

