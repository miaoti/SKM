<!-- Admin Dashboard - Profile Tab -->
<div id="tab-profile" class="hidden space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-xl font-semibold text-gray-900">Shop Profile</h1>
        <button id="btn-save-profile" class="h-9 px-4 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg flex items-center">
            Save Changes
        </button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Shop Details -->
        <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
            <h2 class="text-sm font-semibold text-gray-900 mb-4 border-b border-gray-100 pb-2">General Information</h2>
            <div class="space-y-4">
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block">Shop Name</label>
                    <input type="text" id="shop-name" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed" readonly disabled>
                </div>
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block">Shop Email</label>
                    <input type="email" id="shop-email" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-500 cursor-not-allowed" readonly disabled>
                </div>
                <p class="text-[10px] text-gray-400">Shop name and email can only be changed in <a href="https://admin.shopify.com/store/{{ shop.permanent_domain | split: '.' | first }}/settings/general" target="_blank" class="text-red-500 hover:underline">Shopify Admin Settings</a>.</p>
            </div>
        </div>

        <!-- Branding (Logo) -->
        <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm">
            <h2 class="text-sm font-semibold text-gray-900 mb-4 border-b border-gray-100 pb-2">Branding</h2>
            <div class="space-y-4">
                <!-- File Upload -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block">Upload Logo</label>
                    <div class="flex items-center gap-2">
                        <label class="flex-1 h-10 px-3 text-sm border border-gray-200 rounded-lg flex items-center cursor-pointer hover:border-gray-300 bg-gray-50">
                            <input type="file" id="shop-logo-file" accept="image/*" class="hidden">
                            <span id="logo-file-name" class="text-gray-500 truncate">Choose a file...</span>
                        </label>
                        <button type="button" id="btn-upload-logo" class="h-10 px-4 text-sm font-medium text-white bg-gray-700 hover:bg-gray-800 rounded-lg disabled:opacity-50" disabled>
                            Upload
                        </button>
                    </div>
                    <p class="text-[10px] text-gray-400 mt-1">PNG, JPG, or SVG. Max 5MB.</p>
                </div>
                <!-- OR Divider -->
                <div class="flex items-center gap-3">
                    <div class="flex-1 border-t border-gray-200"></div>
                    <span class="text-xs text-gray-400">OR</span>
                    <div class="flex-1 border-t border-gray-200"></div>
                </div>
                <!-- URL Input -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block">Logo URL</label>
                    <input type="text" id="shop-logo-url" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-red-500" placeholder="https://...">
                    <p class="text-[10px] text-gray-400 mt-1">Or paste a direct URL to your logo.</p>
                </div>
                <!-- Preview -->
                <div class="mt-4">
                    <label class="text-xs font-medium text-gray-600 mb-2 block">Preview</label>
                    <div id="logo-preview-container" class="w-32 h-32 bg-gray-50 border border-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
                        <span id="logo-placeholder" class="text-gray-400 text-xs">No Logo</span>
                        <img id="logo-preview-img" src="" alt="Logo Preview" class="hidden w-full h-full object-contain">
                    </div>
                </div>
            </div>
        </div>

        <!-- Social Media Links -->
        <div class="bg-white rounded-xl border border-gray-200 p-5 shadow-sm lg:col-span-2">
            <h2 class="text-sm font-semibold text-gray-900 mb-4 border-b border-gray-100 pb-2">Social Media Links</h2>
            <p class="text-xs text-gray-500 mb-4">Add your social media links here. These will appear in the footer.</p>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <!-- Twitter -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#1DA1F2]" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                        Twitter / X
                    </label>
                    <input type="text" id="social-twitter" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-red-500" placeholder="https://twitter.com/username">
                </div>

                <!-- Instagram -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#E1306C]" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.069-4.85.069-3.204 0-3.584-.012-4.849-.069-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                        Instagram
                    </label>
                    <input type="text" id="social-instagram" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-red-500" placeholder="https://instagram.com/username">
                </div>

                <!-- Facebook -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#1877F2]" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                        Facebook
                    </label>
                    <input type="text" id="social-facebook" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-red-500" placeholder="https://facebook.com/username">
                </div>

                <!-- YouTube -->
                <div>
                    <label class="text-xs font-medium text-gray-600 mb-1 block flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#FF0000]" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.498-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                        YouTube
                    </label>
                    <input type="text" id="social-youtube" class="w-full h-10 px-3 text-sm border border-gray-200 rounded-lg focus:outline-none focus:border-red-500" placeholder="https://youtube.com/channel/...">
                </div>
            </div>
        </div>

    </div>
</div>
